<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
      "-//Hibernate/Hibernate Configuration DTD 5.3//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-5.3.dtd">


<hibernate-configuration>
	<session-factory>
		<property name="hbm2ddl.auto">update</property>
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/jpadb?createDatabaseIfNotExist=true</property>
		<property name="connection.username">root</property>
		<property name="connection.password">password</property>
		<property name="show_sql">true</property>
		<mapping class="jpaassociationexample.onetooneuni.Student"></mapping>
		<mapping class="jpaassociationexample.onetooneuni.Address"></mapping>
		<mapping class="jpaassociationexample.onetoonebi.StudentBi"></mapping>
		<mapping class="jpaassociationexample.onetoonebi.AddressBi"></mapping>
		<mapping class="jpaassociationexample.onetomanybi.Department"></mapping>
		<mapping class="jpaassociationexample.onetomanybi.Employee"></mapping>
		<mapping class="jpaassociationexample.manytomany.Product"></mapping>
		<mapping class="jpaassociationexample.manytomany.Order"></mapping>
		<mapping class="jpaassociationexample.stc.EmployeeSTC"></mapping>
		<mapping class="jpaassociationexample.stc.ManagerSTC"></mapping>
		<mapping class="jpaassociationexample.tpc.ManagerTPC"></mapping>
		<mapping class="jpaassociationexample.tpc.EmployeeTPC"></mapping>
		<mapping class="jpaassociationexample.js.EmployeeJS"></mapping>
		<mapping class="jpaassociationexample.js.ManagerJS"></mapping>

	</session-factory>
</hibernate-configuration>